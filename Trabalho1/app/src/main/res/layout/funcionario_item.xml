<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="128dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/rcl_prof_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Funcionario"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/rcl_prof_dados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profissao Experiencia Empregado"
            android:textFontWeight="700"
            android:textSize="12dp"/>
        <Button style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:id="@+id/rcl_prof_deletar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deletar"
            android:textColor="@color/purple_700"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>